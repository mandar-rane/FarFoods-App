<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Complete Address"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/address_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save address as *"
        android:textSize="16sp"

        />

    <EditText
        android:layout_marginBottom="10dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/address_tag_et"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flat / House No / Floor / Building"
        android:textSize="16sp"

        />

    <EditText
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/premises_address_et"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area / Sector / Locality"
        android:textSize="16sp"

        />

    <EditText
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locality_address_et"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearby landmark (optional)"
        android:textSize="16sp"

        />

    <EditText
        android:id="@+id/nearby_landmark_address_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/save_complete_address_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Address" />















</LinearLayout>