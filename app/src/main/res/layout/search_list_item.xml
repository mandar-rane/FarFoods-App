<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingTop="10dp">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="3dp"

        app:cardElevation="2dp"
        android:id="@+id/result_image_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_margin="3dp"
            android:id="@+id/result_product_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>
        <LinearLayout
            app:layout_constraintStart_toEndOf="@id/result_image_bg"
            app:layout_constraintTop_toTopOf="@id/result_image_bg"
            app:layout_constraintBottom_toBottomOf="@id/result_image_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:textSize="18sp"
                android:id="@+id/result_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="@color/black"
                android:text="Product Name" />

            <TextView
                android:textSize="15sp"
                android:id="@+id/result_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:textColor="@color/quantum_grey"
                android:text="Shop Name" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




